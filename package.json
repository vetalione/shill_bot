{
  "name": "shillbot",
  "version": "1.0.0",
  "description": "AI-powered Pepe generator bot with social sharing for $PEPE.MP3",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "start:prod": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "build:functions": "tsc -p tsconfig.json && cp -r src/services/twitter-card-server.js dist/functions/index.js",
    "start:web": "tsx src/services/twitter-card-server.ts",
    "deploy:firebase": "npm run build && firebase deploy",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "telegram-bot",
    "ai",
    "pepe",
    "gemini",
    "social-sharing",
    "typescript",
    "grammy"
  ],
  "author": "VetalionE",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vetalione/shill_bot.git"
  },
  "bugs": {
    "url": "https://github.com/vetalione/shill_bot/issues"
  },
  "homepage": "https://github.com/vetalione/shill_bot#readme",
  "dependencies": {
    "@types/express": "^5.0.3",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "grammy": "^1.28.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
